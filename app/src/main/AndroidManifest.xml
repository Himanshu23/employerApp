<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pc.appemployers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".registration" />
        <activity android:name=".Forgetpassword" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library android:name="com.google.android.maps" />

        <activity android:name=".Alert" />
        <activity
            android:name=".Launcher"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".Search">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pc.appemployers.Launcher" />
        </activity>
        <activity android:name=".Reports" >
        <meta-data android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.pc.appemployers.Launcher" />
        </activity>
        <activity android:name=".JobsView">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pc.appemployers.Launcher" />
        </activity>
        <activity android:name=".UpdateProfile"/>
    </application>

</manifest>